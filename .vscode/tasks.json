{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "python",
      "args": [
        ".vscode/vv.py",
        "build",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build and run",
      "type": "shell",
      "command": "python",
      "args": [
        ".vscode/vv.py",
        "buildrun",
        "${file}"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}